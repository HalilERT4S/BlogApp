@model BlogApp.Application.Models.UserRegistrationModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%; 
        }

        body {
            background: linear-gradient(to bottom, #add8e6, #f0f0f0);
            background-repeat: no-repeat;
            background-attachment: fixed;
            display: flex; 
        }

        .signup-container {
            display: flex;
            flex-direction: row;
            width: 100%; 
            height: 100%; 
            overflow: hidden; 
        }

        .image-container {
            flex: 1; 
            position: relative;
            display: flex;
            flex-direction:column;
            justify-content: center;
            align-items: center;
            color: white;
            padding: 2rem;
        }

        .form-container {
            flex: 1; 
            padding: 2rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background-color: #f8f9fa; 
        }

        .image-container-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            position: absolute;
            top: 0;
            left: 0;
            z-index: -1;
        }

        .form-title {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #343a40;
        }

        .form-footer {
            text-align: center;
            margin-top: 1.5rem;
            color: #6c757d;
        }

        .text-danger {
            font-size: 0.875em;
        }

        @@media screen and (max-width:800px){
            .image-container{
                display:none;
            }
        }
    </style>
</head>
<body>
    <div class="signup-container">
        <div class="image-container">
            <img class="image-container-image" src="/images/signup-background-image.jpg" alt="Kayıt Arka Planı" />
            <h2 class="image-container-title">Hoş Geldiniz!</h2>
            <p>Blog platformumuza kaydolarak harika içeriklere ulaşabilir ve kendi düşüncelerinizi paylaşabilirsiniz.</p>
        </div>
        <div class="form-container">
            <h3 class="form-title">Kayıt Ol</h3>
            <form asp-controller="Auth" asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">Ad</label>
                    <input asp-for="FirstName" class="form-control" placeholder="Adınızı giriniz" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">Soyad</label>
                    <input asp-for="LastName" class="form-control" placeholder="Soyadınızı giriniz" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                    <input asp-for="UserName" class="form-control" placeholder="Kullanıcı adınızı giriniz" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Şifre</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi giriniz" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-user-plus me-2"></i>Kayıt Ol
                    </button>
                </div>
            </form>
            <div class="form-footer">
                Zaten bir hesabınız var mı? <a asp-action="Login" class="text-primary">Giriş Yapın</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>