@model BlogApp.Application.Models.UserLoginModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%; 
        }

        body {
            background: linear-gradient(to bottom, #add8e6, #f0f0f0);
            background-repeat: no-repeat;
            background-attachment: fixed;
            display: flex; 
        }

        .login-container {
            display: flex;
            flex-direction: row; 
            width: 100%; 
            height: 100%; 
            overflow: hidden; 
        }

        .image-container {
            flex: 1; 
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: end;
            align-items: center;
            color: white;
            padding: 2rem;
        }

        .form-container {
            flex: 1; 
            padding: 2rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background-color: #f8f9fa;
        }

        .image-container-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            position: absolute;
            top: 0;
            left: 0;
            z-index: -1;
        }

        .form-title {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #343a40;
        }

        .form-footer {
            text-align: center;
            margin-top: 1.5rem;
            color: #6c757d;
        }

        .text-danger {
            font-size: 0.875em;
        }

        .success-message {
            position: absolute;
            top: 20px;
            right: 20px;
            background-color: #d4edda;
            color: #155724;
            padding: 10px 20px;
            border-radius: 5px;
            z-index: 1000; 
        }

        @@media screen and (max-width: 800px) {
            .image-container {
                display: none;
            }
        }
    </style>
</head>
<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="success-message" id="successMessage">
            @TempData["SuccessMessage"]
        </div>
        <script>
            setTimeout(function () {
                var successMessage = document.getElementById('successMessage');
                if (successMessage) {
                    successMessage.style.display = 'none';
                }
            }, 3000);
        </script>
    }
    <div class="login-container">
        <div class="form-container">
            <h3 class="form-title">Giriş Yap</h3>
            <form asp-controller="Auth" asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                    <input asp-for="UserName" class="form-control" placeholder="Kullanıcı adınızı giriniz" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Şifre</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi giriniz" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                    </button>
                </div>
            </form>
            <div class="form-footer">
                Hesabınız yok mu? <a asp-action="Register" class="text-primary">Kayıt Olun</a>
            </div>
        </div>
        <div class="image-container">
            <img class="image-container-image" src="/images/login-background-image.webp" alt="Giriş Arka Planı" />
            <h2 class="image-container-title">Tekrar Hoş Geldiniz!</h2>
            <p>Blog dünyasına geri dönmek için lütfen bilgilerinizi girin.</p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

